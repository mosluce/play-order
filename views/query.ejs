<!DOCTYPE html>
<html>
<%- include partials/head.ejs %>
<body>
<div class="container">
    <div class="page-header">
        <h4>
            <%- include partials/welcome.ejs %>
        </h4>
        <ul class="breadcrumb">
            <li>查詢</li>
        </ul>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <form action="/query" method="post">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        選擇查詢日期
                    </div>
                    <div class="panel-body">
                        <div class="input-group" id="orderDate">
                            <input type="text" class="form-control" name="queryDate"/>
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-calendar"></i>
                            </span>
                        </div>
                    </div>
                    <div class="panel-footer clearfix">
                        <button class="btn btn-default pull-right">Query</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <% orders.forEach(function (order) { %>
    <div class="row">
        <div class="col-sm-12">
            <form action="/query/delete/<%- order.id %>" method="post">
                <div class="label label-primary">
                    <%- moment(order.datetime).format('YYYY/MM/DD HH:mm') %>
                    <% if(order.canceled) { %>
                    <span class="label label-warning">已取消</span>
                    <% } %>
                    <% if(order.finished) { %>
                    <span class="label label-primary">完成取餐</span>
                    <% } %>
                    <% if(order.datetime > new Date()) { %>
                    <button class="label label-danger pull-right">DEL</button>
                    <% } %>
                </div>
            </form>
            <table class="table table-bordered table-striped table-condensed">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Amount</th>
                    <th>Price</th>
                </tr>
                </thead>
                <tbody>

                <% order.list.forEach(function (l) { %>
                <tr>
                    <td>
                        <%- l.item.name %>
                    </td>
                    <td></td>
                    <td></td>
                </tr>
                <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <% }) %>
</div>
<script>
    var value = '<%- selectedDate %>'
</script>
<script>
    function init() {
        var minDate = new Date(Date.now() - 24 * 60 * 60 * 1000);
        var maxDate = new Date(Date.now() + 24 * 60 * 60 * 1000);
        var dtpicker = $('#orderDate > input');

        dtpicker.datetimepicker({
            timepicker: false,
            minDate: minDate,
            maxDate: maxDate,
            value: value,
            format: 'Y/m/d'
        });
    }

    $(document).ready(init);
</script>
</body>
</html>