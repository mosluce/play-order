<html>
<%- include ../partials/head.ejs %>
<body>
<div class="container">
    <%- include menu.ejs %>
    <div class="row">
        <div class="col-sm-12">
            <div class="row" style="background: gray; padding: 8px 0; margin: 8px 0;">
                <div class="col-sm-3">Photo</div>
                <div class="col-sm-2">Name</div>
                <div class="col-sm-2">Price</div>
                <div class="col-sm-3">Amount</div>
                <div class="col-sm-2">Action</div>
            </div>
            <% items.forEach(function(item) { %>
            <div class="row">
                <form action="/admin/stock/<%- item.id %>" method="post" enctype="application/x-www-form-urlencoded">
                    <div class="col-sm-3">
                        <% if(item.photo) { %>
                        <img src="/photo/<%- item.photo %>" style="width: 100%; max-height: 100px;">
                        <% } else { %>
                        <img src="/img/default.jpg" style="width: 100%; max-height: 100px;">
                        <% } %>
                    </div>
                    <div class="col-sm-2">
                        <%- item.name %>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group">
                            Big: <%- item.price.big %>
                        </div>
                        <div class="form-group">
                            Small: <%- item.price.small %>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label>Big Amount</label>
                            <input class="form-control" type="number" name="amountBig" value="<%- item.amount.big %>">
                        </div>
                        <div class="form-group">
                            <label>Small Amount</label>
                            <input class="form-control" type="number" name="amountSmall" value="<%- item.amount.small %>">
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <button class="btn btn-default">Update</button>
                    </div>
                </form>
            </div>
            <% }) %>

        </div>
    </div>
</div>
</body>
</html>